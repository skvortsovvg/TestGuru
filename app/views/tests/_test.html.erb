 <div id="<%= dom_id test %>">
  <p>
    <strong><%= "#{test.title} (#{pluralize(test.questions.count, "question" )})" %></strong><br>
    <%= "#{test.category.title}, #{test.level_represent}" %><br>
    <%= "Автор: #{test.author.first_name} #{test.author.last_name}" %>
    
    <%= button_to "Открыть", test, method: :get, form: {style: 'display:inline-block;'} %> |
    <%= button_to "Начать прохождение", start_test_path(test), method: :post, form: {style: 'display:inline-block;'} %> |
    <%= button_to "Удалить", test, method: :delete, form: {style: 'display:inline-block;'} %>
    <br>
    </p>

  </p>

</div>
