<% if object.errors.any? %>
  <div style="color: red">
    <h2><%= t("errors.messages.not_saved", resource: object.class.to_s, count: object.errors.count) %>  </h2>

    <ul>
      <% object.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
