<h1>Создаем новый тест</h1>

<%= form_with model: [:admin, @test] do |form| %>
  <%= render 'shared/errors', errors: @test.errors %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :category %><br>
    <%= collection_select(:test, :category_id, Category.all, :id, :title, { selected: 3 }) %>
  </p>

  <p>
    <%= form.label :level %><br>
    <%= form.select :level, (0..10).to_a %>
  </p>

  <div>
    <%= form.submit "Создать" %>
  </div>
<% end %>
