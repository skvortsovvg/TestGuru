<h1><%= t('.title') %></h1>

<%= form_with model: [:admin, @test] do |form| %>
  <%= render 'shared/errors', object: @test %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :category %><br>
    <%= collection_select(:test, :category_id, Category.all, :id, :title, prompt: true) %>
  </p>

  <p>
    <%= form.label :level %><br>
    <%= form.select :level, (0..10).to_a %>
  </p>

  <div>
    <%= form.submit %>
  </div>
<% end %>
